@model BibleVerse.Models.SearchModel

@{
    ViewData["Title"] = "Bible Verse Search";
}


<div class="container-sm">

    <div class="container text-center">
        <div class="row row-cols-3">
            <div class="col"></div>
            <div class="col">
                <h2>Search for a keyword in the Bible:</h2>
                <br />
                <br />
            </div>
            <div class="col"></div>


            <div class="col"></div>
            <div class="col">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-4">
                        <form asp-action="ProcessSearch">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="SearchTerm" class="control-label">Search Term:</label>
                                <input asp-for="SearchTerm" class="form-control" width="100%"/>
                            </div>
                            <br />
                            <div class="form-group">
                                <select asp-for="Testament">
                                    <option value="new">New Testament</option>
                                    <option value="old">Old Testament</option>
                                    <option value="both">Both</option>
                                </select>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>

    

    <br />
    <br />

    

</div>

